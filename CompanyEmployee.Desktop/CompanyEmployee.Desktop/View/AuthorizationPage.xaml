<Page x:Class="CompanyEmployee.Desktop.View.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CompanyEmployee.Desktop.View"
      mc:Ignorable="d" 
      d:DesignHeight="660" d:DesignWidth="800"
      Title="AuthorizationPage"
      Background="White">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Авторизация" HorizontalAlignment="Center" Margin="0,0,0,10" FontSize="20"></TextBlock>
            <TextBlock Padding="0,10" Margin="200,0" Text="Логин"></TextBlock>
            <TextBox Name="UsernameTextBox" Padding="0,10" Margin="200,0"></TextBox>
            <TextBlock Padding="0,10" Margin="200,0" Text="Пароль"></TextBlock>
            <PasswordBox Name="PasswordTextBox" Padding="0,10" Margin="200,0"></PasswordBox>
            <StackPanel Margin="0,20,0,0">
                <Button Content="Войти" Name="AuthorizeButton" Padding="0,10" Margin="200,0" Click="AuthorizeButton_Click"></Button>
                <Button Content="Зарегистрироваться" Name="RegisterButton" Padding="0,10" Margin="200,0" Click="RegisterButton_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
